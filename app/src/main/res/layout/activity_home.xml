<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile Layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/headingLayout"
        android:layout_width="251dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02">

        <!-- TextView of Triviosity-->

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/letter_T"
            android:textColor="?attr/colorTertiary"
            android:textSize="60sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_r"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="50sp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_i"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="45sp"
            android:textStyle="italic" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_v"
            android:textColor="?attr/colorOnTertiaryFixedVariant"
            android:textSize="44sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_i"
            android:textColor="?attr/colorPrimary"
            android:textSize="35sp"
            android:textStyle="italic" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_o"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="56sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_s"
            android:textColor="?attr/colorSecondary"
            android:textSize="42sp"
            android:textStyle="italic" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_i"
            android:textColor="?attr/colorTertiary"
            android:textSize="48sp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_t"
            android:textColor="?attr/colorOnTertiaryFixedVariant"
            android:textSize="49sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_y"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="40sp"
            android:textStyle="italic" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profileLinearLayout"
        android:layout_width="252dp"
        android:layout_height="116dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="85dp"
                android:layout_height="88dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/round_image"
                android:clipToOutline="true"
                android:contentDescription="@string/display_pic"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image"/>

        </com.google.android.material.card.MaterialCardView>



        <!-- Username, level, points layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/homeUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="@string/username"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/homeLevel"
                android:layout_width="93dp"
                android:layout_height="18dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="@string/level"
                android:textColor="?attr/colorOnSecondary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/points"
                android:layout_width="93dp"
                android:layout_height="18dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="@string/points"
                android:textColor="?attr/colorOnSecondary" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifeLineLayout">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/shopping_cart"
            app:icon="@drawable/baseline_shopping_cart_24"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSecondary" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/redeem_text"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/coinLayout"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginTop="116dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toEndOf="@+id/profileLinearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="37dp"
                android:layout_height="29dp"
                android:src="@drawable/coin_image"
                android:contentDescription="@string/coin_description" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/coinText"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:text="@string/coin_points"
            android:textColor="?attr/colorOnSecondary" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lifeLineLayout"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toEndOf="@+id/profileLinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/coinLayout">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="33dp"
                    android:contentDescription="@string/fifty_fifty_description"
                    android:src="@drawable/fifty" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fiftyFifty"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:text="@string/fiftyFifty"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="15sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="33dp"
                    android:contentDescription="@string/skip_description"
                    android:src="@drawable/skip" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:text="@string/skip"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="15sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="168dp"
        android:layout_height="192dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLinearLayout"
        app:layout_constraintVertical_bias="0.279">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playBtn"
            android:layout_width="168dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:text="@string/play"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="152dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/categoriesBtn"
            android:layout_width="168dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:text="@string/categories_title"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/howToPlayLayout"
        android:layout_width="83dp"
        android:layout_height="94dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLinearLayout"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/helpDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="32dp"
            android:text="@string/about_text"
            android:textSize="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/aboutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/baseline_info_24"
            app:iconSize="29dp"
            app:iconTint="?attr/colorSecondary"
            app:layout_constraintTop_toBottomOf="@+id/helpDescription" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/reminderLayout"
        android:layout_width="74dp"
        android:layout_height="98dp"
        android:layout_marginStart="208dp"
        android:layout_marginBottom="76dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/howToPlayLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.757">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/setReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/set_reminder"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/timerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/reminder_description"
            app:icon="@drawable/timer"
            app:iconSize="35dp"
            app:iconTint="?attr/colorOnSecondary"
            android:layout_marginEnd="9dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottomNavLayout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsBtn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:contentDescription="@string/settings"
                app:icon="@drawable/settings"
                android:layout_marginEnd="3dp"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="24dp"
                android:backgroundTint="@android:color/transparent"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/settings"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="13sp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/leaderboardBtn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:contentDescription="@string/leaderboard"
                app:icon="@drawable/leaderboard"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="5dp"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSecondary"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/leaderboard"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="13sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_page_historyBtn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/history"
                app:icon="@drawable/history_icon"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="24dp"
                android:layout_marginEnd="5dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/history"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="13sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutBtn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/baseline_logout_24"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="24dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/logout" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/logout"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="13sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>